extends t-layout

block content
    h1=title


    form(method='POST' action='')
        div.form-group
            label(for='first_name') First Name:
            input#first_name.form-control(type='text', placeholder='First name (Christian) last' name='first_name' required='true' value=(undefined===player ? '' : author.first_name) )
            label(for='family_name') Family Name:
            input#family_name.form-control(type='text', placeholder='Family name (surname)' name='family_name' required='true' value=(undefined===player ? '' : author.family_name))
            label(for='nick') nick:
            input#nick.form-control(type='text', placeholder='nick'  name= 'nick' required = 'true' value=(undefined===player ? '' : player.nick))
            label(for='score') score:
            input#score.form-control(type='Number', placeholder='0'  name= 'score' required = 'true' value=(undefined===player ? '' : player.score))

        div.form-group
            label(for='date_of_birth') Date of birth:
            input#date_of_birth.form-control(type='date', name='date_of_birth', value=(undefined===player ? '' : player.date_of_birth) )
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg