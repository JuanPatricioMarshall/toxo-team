extends t-layout

block content
    h1=title


    form(method='POST' action='')
        div.form-group
            label(for='score') score:
            input#score.form-control(type='Number', placeholder='0'  name= 'score' required = 'true' value=(undefined===player ? '' : player.score))
            label(for='image_url') image_url:
            input#image_url.form-control(type='text', placeholder='image_url'  name= 'image_url'  value=(undefined === player ? '' : player.image_url))
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg